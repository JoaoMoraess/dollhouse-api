{
  "name": "dollhouse-api",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "description": "Api para E-Comerce com base em Clean Architecture e TDD.",
  "keywords": [
    "clean code",
    "api",
    "e-comerce",
    "loja virtual com node",
    "tdd",
    "ddd",
    "solid",
    "design patterns",
    "clean architecture",
    "node",
    "typescript",
    "jest"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/JoaoMoraess/dollhouse-api.git"
  },
  "author": {
    "name": "Joao Moraess",
    "email": "joaomorais.cirne@gmail.com"
  },
  "scripts": {
    "start": "node -r dotenv/config dist/main",
    "dev": "ts-node-dev --respawn --transpile-only --clear -r dotenv/config --inspect=0.0.0.0:9229 src/main",
    "clean": "rimraf dist",
    "build": "yarn clean && tsc -p tsconfig-build.json",
    "up": "yarn build && docker-compose up -d",
    "down": "docker-compose down",
    "clean:volumes": "docker volume prune -f",
    "prepare": "husky install",
    "lint": "eslint .",
    "lint:fix": "yarn lint -- --fix",
    "test": "jest --passWithNoTests --no-cache --runInBand",
    "test:watch": "yarn test --watch",
    "test:staged": "yarn test --findRelatedTests",
    "test:coverage": "yarn test --coverage",
    "test:integration": "yarn test --config ./jest.integration.config.js",
    "test:pagseguro-api": "yarn test:integration -- ./tests/external/pagseguro-api.test.ts",
    "test:correios-api": "yarn test:integration -- ./tests/external/correios-api.test.ts",
    "test:coveralls": "yarnest:coverage && coveralls < coverage/lcov.info"
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./src/infra/repos/postgres/helpers/database-config.ts",
      "./dist/infra/repos/postgres/helpers/database-config.js"
    ]
  },
  "devDependencies": {
    "@mikro-orm/cli": "^4.5.9",
    "@mikro-orm/reflection": "^4.5.9",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.10.3",
    "@types/uuid": "^8.3.1",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "coveralls": "^3.1.1",
    "dotenv": "^10.0.0",
    "eslint": "^7.32.0",
    "eslint-config-standard-with-typescript": "^21.0.1",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "husky": "^7.0.2",
    "jest": "^27.2.5",
    "jest-mock-extended": "^2.0.4",
    "lint-staged": "^11.2.6",
    "pg-mem": "^2.1.5",
    "supertest": "^6.1.6",
    "ts-jest": "^27.0.5",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.4.3"
  },
  "dependencies": {
    "@mikro-orm/core": "^4.5.9",
    "@mikro-orm/postgresql": "^4.5.9",
    "@types/module-alias": "^2.0.1",
    "axios": "^0.23.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "frete": "^0.3.2",
    "module-alias": "^2.2.2",
    "uuid": "^8.3.2",
    "xml-js": "^1.6.11"
  },
  "engines": {
    "node": "16.x"
  }
}
