// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Product {
  id       String  @id
  name     String
  stock    Int     @default(0)
  price    Int
  imageUrl String
  orders   Order[]
}

model Order {
  id          String    @id
  total       Int
  cep         String
  pagSeguroId String
  products    Product[]
  confirmed   Boolean
  sent        Boolean
}
