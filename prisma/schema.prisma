// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Product {
  id           String         @id
  name         String
  stock        Int            @default(0)
  price        Int
  imageUrl     String
  OrderProduct OrderProduct[]
}

model OrderProduct {
  id        String  @id
  product   Product @relation(fields: [productId], references: [id])
  productId String
  quantity  Int
  Order     Order?  @relation(fields: [orderId], references: [id])
  orderId   String?
}

model Order {
  id           String         @id
  total        Int
  subTotal     Int
  deliveryCost Int
  cep          String
  pagSeguroId  String
  products     OrderProduct[]
  confirmed    Boolean
  sent         Boolean
}
